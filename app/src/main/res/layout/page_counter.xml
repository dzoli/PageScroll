<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/page"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_text_elements"
            android:layout_marginRight="8dp"
            android:layout_marginTop="@dimen/margins"
            android:gravity="center"
            android:text="Page"
            android:textSize="@dimen/text" />


        <ListView
            android:id="@+id/currentPageListView"
            android:layout_width="30dp"
            android:layout_height="120dp"
            android:layout_toRightOf="@+id/page"
            android:clickable="false"
            android:divider="@null"
            android:enabled="false"
            android:fadingEdgeLength="50dp"
            android:gravity="center"
            android:requiresFadingEdge="vertical"
            android:scrollbars="none" />

        <TextView
            android:id="@+id/slash"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_text_elements"
            android:layout_marginRight="4dp"
            android:layout_marginTop="@dimen/margins"
            android:layout_toRightOf="@+id/currentPageListView"
            android:gravity="center"
            android:text="/"
            android:textSize="@dimen/text" />

        <TextView
            android:id="@+id/maxPages"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_text_elements"
            android:layout_marginTop="@dimen/margins"
            android:layout_toRightOf="@+id/slash"
            android:gravity="center"
            android:text="maxPages"
            android:textSize="@dimen/text" />

    </RelativeLayout>
</merge>